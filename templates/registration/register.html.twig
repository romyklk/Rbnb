{% extends 'base.html.twig' %}

{% block title %}Inscription -
	{{ parent() }}
{% endblock %}


{% block body %}

	<div class="container">

		<div class="row">
			<div class="col-md-9 m-auto">

				<h1 class="text-center my-5">Inscrivez-vous <span class="text-muted text-capitalize">C'est simple et rapide</span></h1>

				{{ form_start(registrationForm) }}
				{{ form_row(registrationForm.firstName) }}
				{{ form_row(registrationForm.lastName) }}
				{{ form_row(registrationForm.email) }}
				{{ form_row(registrationForm.password, {
            label: 'Password'
        }) }}
				
				{{ form_row(registrationForm.phone) }}
				{{ form_row(registrationForm.address) }}
				{{ form_row(registrationForm.city) }}
				{{ form_row(registrationForm.postalCode) }}
				{{ form_row(registrationForm.country) }}
				{{ form_row(registrationForm.introduction) }}
				{{ form_row(registrationForm.presentation) }}
				{{ form_row(registrationForm.profilPicture) }}

                {{ form_row(registrationForm.agreeTerms) }}
                {{ form_label(registrationForm.agreeTerms, "J'accepte les termes et conditions") }}

				<div class="d-grid gap-2 col-6 mx-auto">
					<button type="submit" class="btn btn-primary rounded">S'inscrire</button>
				</div>
				{{ form_end(registrationForm) }}
			</div>
		</div>
	</div>


{% endblock %}
