
{% set page = pagination.getPage %}
{% set pages = pagination.getPages %}
<div>
	<ul class="pagination justify-content-center">
		<li class="page-item  {% if page == 1  %}disabled{% endif %}">
			<a class="page-link rounded-circle" href="{{path(pageRoute,{'page': page - 1})}}">&laquo;</a>
		</li>
		{% for i in 1..pages %}
			<li class="page-item {% if page == i  %}active{% endif %}">
				<a class="page-link rounded-circle" href="{{path(pageRoute,{'page':i})}}">{{i}}</a>
			</li>
		{% endfor %}
		<li class="page-item {% if page == pages  %}disabled{% endif %}">
			<a class="page-link rounded-circle" href="{{path(pageRoute,{'page': page + 1})}}">&raquo;</a>
		</li>
	</ul>
</div>


